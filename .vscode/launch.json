  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "program": "${workspaceFolder}/server/server.js",
      "restart": true,
      "runtimeExecutable": "nodemon",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "${workspaceFolder}/front-end/*",
        "${workspaceFolder}/front-end-graphql/*",
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch GraphQL Server",
      "program": "${workspaceFolder}/server-graphql/server.js",
      "restart": true,
      "runtimeExecutable": "nodemon",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "${workspaceFolder}/front-end/*",
        "${workspaceFolder}/front-end-graphql/*",
      ]
    }
  ]
}